<div class="container">
  <h3>Listing <%= @count %> Dojos</h3>

  <% if flash[:notice] %>
	 <p><%= flash[:notice] %></p>
  <% end %>

  <div class="table1">
    <table class="table">
      <thead>
        <tr>
          <th>Coding Dojo Branch</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @dojos.each do | dojo | %>
          <tr>
            <td><%= dojo[:branch] %></td>
            <td><%= dojo[:street] %></td>
            <td><%= dojo[:city] %></td>
            <td><%= dojo[:state] %></td>
            <td><a href="/dojos/<%= dojo.id %>">Show</a></td>
            <td><a href="/dojos/<%= dojo.id %>/edit">Edit</a></td>
            <td>
              <form class="" action="/dojos/<%= dojo.id %>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <a href="/dojos/new">New Dojo</a>
</div>
