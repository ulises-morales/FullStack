<div class="container">
  <h3>Editing <%= @dojo.branch %></h3>

  <% if flash[:errors] %>
	 <% flash[:errors].each do |e| %>
		<p><%= e %></p>
	 <% end %>
  <% end %>

  <form class="form-horizontal" action="/dojos/<%= @dojo.id %>/" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="branch" class="col-sm-2 control-label">Branch</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="branch" name="dojo[branch]" value="<%= @dojo.branch %>">
      </div>
    </div>

    <div class="form-group">
      <label for="street" class="col-sm-2 control-label">Street</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="street" name="dojo[street]" value="<%= @dojo.street %>">
      </div>
    </div>

    <div class="form-group">
      <label for="city" class="col-sm-2 control-label">City</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="city" name="dojo[city]" value="<%= @dojo.city %>">
      </div>
    </div>

    <div class="form-group">
      <label for="state" class="col-sm-2 control-label">State</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="state" name="dojo[state]" value="<%= @dojo.state %>">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <button type="submit" class="btn btn-default">Update</button>
      </div>
    </div>
  </form>

  <a href="/dojos">Go Back</a>
</div>
