<div class="container">
  <h3><%= @dojo.branch %></h3>
  <br><br>
  <h5>Address: <span><%= @dojo.street %></span></h5>
  <h5>City: <span><%= @dojo.city %></span> <span>State: </span><%= @dojo.state %></h5>
  <div class="nav">
    <a href="/dojos">Home</a>
    <span>|</span>
    <a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
  </div>

  <h3>Student Roster</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Fist Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do | student | %>
        <tr>
          <td><%= student[:first_name] %></td>
          <td><%= student[:last_name] %></td>
          <td><%= student[:email] %></td>
          <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a></td>
          <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a></td>
          <td>
            <form class="" action="/dojos/<%= @dojo.id %>/students/<%= student.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </tr>
      <% end %>
    </tbody>
  </table>

  <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>
</div>
