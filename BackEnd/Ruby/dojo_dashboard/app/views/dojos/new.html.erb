<div class="container">
  <h3>New Dojo</h3>

  <% if flash[:errors] %>
  	<% flash[:errors].each do |e| %>
  		<p><%= e %></p>
  	<% end %>
  <% end %>

  <form class="form-horizontal" action="/dojos" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="branch" class="col-sm-2 control-label">Branch</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="branch" name="dojo[branch]" placeholder="Name of Dojo">
      </div>
    </div>

    <div class="form-group">
      <label for="street" class="col-sm-2 control-label">Street</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="street" name="dojo[street]" placeholder="Street Name">
      </div>
    </div>

    <div class="form-group">
      <label for="city" class="col-sm-2 control-label">City</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="city" name="dojo[city]" placeholder="Name of the City">
      </div>
    </div>

    <div class="form-group">
      <label for="state" class="col-sm-2 control-label">State</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="state" name="dojo[state]" placeholder="State Name">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <button type="submit" class="btn btn-default">Create</button>
      </div>
    </div>
  </form>

  <a href="/dojos">Go Back</a>
</div>
