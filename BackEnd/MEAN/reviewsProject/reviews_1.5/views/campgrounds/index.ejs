<% include ../partials/header %>
  <div class="container">
    <header class="jumbotron">
      <h1>Welcome to Campground</h1>
      <p>View all the campgrounds</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
      </p>
    </header>

    <div class="row">
      <div class="col-lg-12">
        <h3>Most popular campgrounds!</h3>
      </div>

      <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campInfo.forEach(function(camp){ %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= camp.image %>" alt="camp">
              <div class="caption">
                <h4><%= camp.name %></h4>
              </div>
              <p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
