<div class="container">
  <h1><%= "#{@dojo.branch}'s #{@student.first_name} #{@student.last_name}" %></h1>

  <% if flash[:notice] %>
  	<p><%= flash[:notice] %></p>
  <% end %>

  <h4>Email: <%= @student.email %></h4>

  <h3>Cohort</h3>

  <table class="table">
    <thead>
      <tr>
        <th>Fist Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @cohort.each do | student | %>
        <% if @student.id != student.id && @dojo.id = student.dojo_id%>
        <tr>
          <td><%= student[:first_name] %></td>
          <td><%= student[:last_name] %></td>
          <td><%= student[:email] %></td>
          <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a></td>
          <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a></td>
          <td>
            <form class="" action="/dojos/<%= @dojo.id %>/students/<%= student.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <a href="/dojos">Home</a>
  <span>|</span>
  <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>">Edit</a>

</div>
