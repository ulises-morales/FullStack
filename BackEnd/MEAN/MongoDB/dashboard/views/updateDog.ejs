<% include partials/header %>
    <div class="container">
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card">
              <% if(typeof(errors) != 'undefined' ) { %>
              <% for (var x in errors) { %>
                <p><%= errors[x].message %></p>
              <% } %>
              <% } %>
            <div class="row">
              <div class="col-md-4">
                <h3>Update Dog's info</h3>
                <form class="dogs" action="/dogs/<%= dogs.id%>" method="post">
                  <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Dog's Name">
                  </div>
                  <div class="form-group">
                    <input class="form-control" type="text" name="breed" placeholder="Dog's Breed">
                  </div>
                  <div class="form-group">
                    <input class="form-control" type="text" name="age" placeholder="Dog's Age">
                  </div>
                  <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block" type="submit" name="button">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
<% include partials/footer %>
