<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">New Blog Post</div>

  <form class="ui form" action="/blogs" method="post">
    <div class="field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" placeholder="Title">
    </div>
    <div class="field">
      <label for="">Image</label>
      <input type="text" name="blog[image]" placeholder="Image">
    </div>
    <div class="field">
      <label for="">Blog Post</label>
      <textarea name="blog[body]" rows="8" cols="80" placeholder="Write a post"></textarea>
    </div>
    <input type="submit" class="ui positive basic button">
  </form>
</div>
<% include ./partials/footer %>
